= simple_form_for Message.new, url: contact_email_only_url(origin_url: request.fullpath), defaults: { class: "form-inline" } do |f|
	= f.hidden_field :subject, value: "Email only form submitted from #{request.fullpath}"
	= f.hidden_field :static_body, value: static_body_text
	= f.input_field :email, placeholder: "Enter email address", input_html: {class: "input-medium"}
	= f.button :submit, value: button_label