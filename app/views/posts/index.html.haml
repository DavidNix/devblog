- provide(:title, "Posts")
%h1 Posts

= link_to 'New Post', new_post_path

- @posts.each do |post|
  %h3 Title
  %p= post.title
  %h3 Permalink
  %p= post.permalink
  %h3 Release Date
  %p= post.release_date
  = link_to 'Show', post
  = link_to 'Edit', edit_post_path(post)
  = link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete
  %hr

%br
= link_to 'New Post', new_post_path