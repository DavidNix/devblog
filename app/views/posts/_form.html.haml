= form_for @post do |f|
  -if @post.errors.any?
    %div.alert
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :permalink
    = f.text_field :permalink
  .field
    = f.label :release_date
    = f.date_select :release_date
  .field
    = f.label :teaser
    = f.text_area :teaser
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
